<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.meetingmanage.mapper.ManagerMapper">
    <!-- 定义结果映射 -->
    <resultMap id="BaseResultMap" type="com.example.meetingmanage.entities.Manager">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>
    
    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, username, password
    </sql>

    <!-- 登录验证，查询用户名和密码是否匹配 -->
    <select id="loginMessage" resultMap="BaseResultMap" parameterType="com.example.meetingmanage.entities.Manager">
        select 
        <include refid="Base_Column_List" />
        from manager
        where username = #{username,jdbcType=VARCHAR} 
        and password = #{password,jdbcType=VARCHAR}
    </select>
    
    <!-- 删除操作 -->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
        delete from manager
        where username = #{username,jdbcType=VARCHAR}
    </delete>
    
    <!-- 插入操作 -->
    <insert id="insert" parameterType="com.example.meetingmanage.entities.Manager">
        insert into manager (id, username, password)
        values (#{id,jdbcType=BIGINT}, #{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
    </insert>
    
    <!-- 根据主键查询 -->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String">
        select 
        <include refid="Base_Column_List" />
        from manager
        where username = #{username,jdbcType=VARCHAR}
    </select>
    
    <!-- 查询所有记录 -->
    <select id="selectAll" resultMap="BaseResultMap">
        select 
        <include refid="Base_Column_List" />
        from manager
    </select>
    
    <!-- 更新操作 -->
    <update id="updateByPrimaryKey" parameterType="com.example.meetingmanage.entities.Manager">
        update manager
        set password = #{password,jdbcType=VARCHAR}
        where username = #{username,jdbcType=VARCHAR}
    </update>
</mapper> 